			<%- include('../partials/header.ejs') %>
			<h1>Cập nhật nguồn cung</h1>
			<form id="edit-supplier">
			  <div class="container">
			    <div class="row">
			      <div class="col-md-5">
			        <input type="hidden" name="id" value="<%= supplierEdit.id %>">
			        <div class="form-group">
			          <label>Tên</label>
			          <input type="text" value="<%= supplierEdit.name  %>" class="form-control" placeholder="Tên Nguồn Cung" required name="name">
			        </div>
			        <div class="form-group">
			          <label>Địa Chỉ</label>
			          <input type="text" value="<%= supplierEdit.address  %>" class="form-control" placeholder="Địa Chỉ" required name="address">
			        </div>
			        <div class="form-group">
			          <label>Số Điện Thoại</label>
			          <input type="text" value="<%= supplierEdit.phone  %>" class="form-control" placeholder="Số Điện Thoại" required name="phone">
			        </div>
			        <div class="form-group">
			          <button class="btn btn-success" type="submit">Lưu</button>
			        </div>
			      </div>
			    </div>
			  </div>
			</form>
			<%- include('../partials/footer.ejs') %>